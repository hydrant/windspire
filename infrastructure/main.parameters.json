{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "value": "windspire"
        },
        "environment": {
            "value": "dev"
        },
        "location": {
            "value": "East US"
        },
        "postgresAdminLogin": {
            "value": "windspire_admin"
        },
        "postgresAdminPassword": {
            "reference": {
                "keyVault": {
                    "id": "/subscriptions/{subscription-id}/resourceGroups/{rg-name}/providers/Microsoft.KeyVault/vaults/{kv-name}"
                },
                "secretName": "postgres-admin-password"
            }
        },
        "firebaseConfig": {
            "value": {
                "projectId": "your-firebase-project-id",
                "privateKey": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
                "clientEmail": "firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
            }
        }
    }
}