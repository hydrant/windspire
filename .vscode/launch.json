    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'windspire_backend'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=windspire_backend",
                    "--manifest-path=windspire_backend/Cargo.toml"
                ],
                "filter": {
                    "name": "windspire_backend",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/windspire_backend"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'windspire_backend'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=windspire_backend",
                    "--package=windspire_backend",
                    "--manifest-path=windspire_backend/Cargo.toml"
                ],
                "filter": {
                    "name": "windspire_backend",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/windspire_backend",
            "sourceMap": {},
            "initCommands": [
                "settings set target.inline-breakpoint-strategy always",
                "settings set target.process.thread.step-avoid-regexp '^(std|core|tokio|hyper|tower|axum)(::|$)'"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'windspire_backend'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=windspire_backend",
                    "--package=windspire_backend",
                    "--manifest-path=windspire_backend/Cargo.toml"
                ],
                "filter": {
                    "name": "windspire_backend",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/windspire_backend"
        }
    ]
}